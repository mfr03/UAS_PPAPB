<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UAS_PPAPB_V2" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/primary_orange</item>
    </style>

    <style name="Theme.UAS_PPAPB_V2" parent="Base.Theme.UAS_PPAPB_V2" />

    <style name="Theme.UAS_PPAPB_V2.WithActionBar" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">@color/primary_orange</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@drawable/header</item>
        <item name="titleTextStyle">@style/CustomActionBarTitle</item>
    </style>

    <style name="CustomActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomBottomNavView.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/tertiary_orange</item>
    </style>



    <style name="Text.Normal" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/opensans_reguler</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text_gray</item>
    </style>

    <style name="Text.Normal.Bold" parent="Text.Normal">
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="Text.Normal.Semibold" parent="Text.Normal">
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Text.Header.Main" parent="Text.Normal.Bold">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Header.Sub" parent="Text.Header.Main">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Cardview.Title" parent="Text.Normal.Semibold">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="CustomCircularImageView">
        <item name="android:scaleType">centerCrop</item>
        <item name="civ_border_color">@color/secondary_text_orange</item>
        <item name="civ_border_width">4dp</item>
        <item name="civ_circle_background_color">@color/secondary_text_orange</item>
    </style>
</resources>